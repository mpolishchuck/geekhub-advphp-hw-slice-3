{% extends "::base.html.twig" %}

{% block title %}GeekHub Homework{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/bootstrap.min.css') }}" />
    {% stylesheets '@PaulMaxwellHomeworkBundle/Resources/public/css/*.css' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ url('paul_maxwell_homework_homepage') }}">GeekHub Homework</a>
            </div>
            <div class="navbar-collapse collapse">
                {{ block('navmenu') }}
            </div><!--/.nav-collapse -->
        </div>
    </div>
{% endblock body %}

{% block navmenu %}
    <ul class="nav navbar-nav">
        <li{% if app.request.attributes.get('_route') == 'paul_maxwell_homework_homepage' %} class="active"{% endif %}><a href="{{ url('paul_maxwell_homework_homepage') }}">Index</a></li>
        <li{% if app.request.attributes.get('_route') == 'paul_maxwell_homework_about' %} class="active"{% endif %}><a href="{{ url('paul_maxwell_homework_about') }}">About</a></li>
        <li{% if app.request.attributes.get('_route') == 'paul_maxwell_homework_contact' %} class="active"{% endif %}><a href="{{ url('paul_maxwell_homework_contact') }}">Contact</a></li>
    </ul>
{% endblock %}
